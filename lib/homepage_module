import 'package:flutter/material.dart';
import 'package:firebase_auth/firebase_auth.dart';
import 'package:firebase_database/firebase_database.dart';
import 'package:shared_preferences/shared_preferences.dart';
import 'package:google_fonts/google_fonts.dart';
import 'dart:async';
import 'dart:io';
import 'dart:convert';
import 'posting_module.dart';
import 'book-posted_module.dart';
import 'book-detail-screen_module.dart';
import 'chat_module.dart' show ChatsScreen;
import 'favorite_module.dart' show FavoritesScreen;
import 'profile_module.dart' show ProfileScreen;

// Note: main() is in main.dart, not here
// This module provides the HomeScreen UI

class HomeScreen extends StatefulWidget {
  const HomeScreen({Key? key}) : super(key: key);

  @override
  State<HomeScreen> createState() => _HomeScreenState();
}

class _HomeScreenState extends State<HomeScreen> with TickerProviderStateMixin {
  double _lastOffset = 0;
  String selectedCategory = 'All';
  String searchQuery = '';
  final TextEditingController searchController = TextEditingController();
  int selectedNavIndex = 0;
  late List<AnimationController> _iconAnimationControllers;
  String userName = 'User'; // Default username
  File? _avatarImage; // Store avatar image
  final ScrollController _scrollController = ScrollController();
  bool _isHeaderCollapsed = false;
  double _headerOpacity = 1.0;
  double _bannerHeight = 200.0;
  int _unreadCount = 0;

  final List<String> categories = [
    'All',
    'Education',
    'Non - Fiction',
    'Mystery',
    'Fiction',
  ];

  // Helper function for Poppins text style
  TextStyle poppinsStyle({
    double fontSize = 14,
    FontWeight fontWeight = FontWeight.normal,
    Color color = Colors.black,
    double? height,
  }) {
    return GoogleFonts.poppins(
      fontSize: fontSize,
      fontWeight: fontWeight,
      color: color,
      height: height,
    );
  }

  @override
  void initState() {
    super.initState();
    _loadUserName(); // Load username from Firebase
    _loadSavedAvatar(); // Load saved avatar from profile
    _loadUnreadCount(); // Load unread message count
    _iconAnimationControllers = List.generate(
      4,
      (index) => AnimationController(
        duration: const Duration(milliseconds: 300),
        vsync: this,
      ),
    );
    _iconAnimationControllers[0].forward();
    
    // Add scroll listener for smooth collapse animation
    _scrollController.addListener(_onScroll);
  }

  void _onScroll() {
    // Calculate scroll position for animations
    final offset = _scrollController.offset;
    final isScrollingUp = offset < _lastOffset;
    _lastOffset = offset;

    setState(() {
      // If scrolling up, restore header
      if (isScrollingUp && offset < 150) {
        _isHeaderCollapsed = false;
        _headerOpacity = 1.0 - (offset / 200);
        _bannerHeight = 200 - (offset * 0.8);
      } else if (!isScrollingUp && offset > 150) {
        _isHeaderCollapsed = true;
        _headerOpacity = 0.0;
        _bannerHeight = 0;
      } else if (offset <= 150) {
        _isHeaderCollapsed = false;
        _headerOpacity = 1.0 - (offset / 200);
        _bannerHeight = 200 - (offset * 0.8);
      }
    });
  }

  Future<void> _loadSavedAvatar() async {
    try {
      final user = FirebaseAuth.instance.currentUser;
      if (user == null) {
        print('DEBUG: No user logged in, cannot load avatar in homepage');
        return;
      }
      
      final prefs = await SharedPreferences.getInstance();
      final avatarKey = 'avatar_base64_${user.uid}';
      final base64String = prefs.getString(avatarKey);
      
      if (base64String != null && base64String.isNotEmpty) {
        try {
          // Decode base64 to bytes
          final bytes = base64Decode(base64String);
          print('DEBUG: Decoded base64 to ${bytes.length} bytes in homepage for user ${user.uid}');
          
          // Create a temporary file from bytes
          final tempDir = await Directory.systemTemp.createTemp('flutter_avatar_hp');
          final avatarFile = File('${tempDir.path}/avatar.png');
          await avatarFile.writeAsBytes(bytes);
          
          if (mounted) {
            setState(() {
              _avatarImage = avatarFile;
            });
            print('DEBUG: Loaded saved avatar from base64 in homepage');
          }
        } catch (decodeError) {
          print('DEBUG: Error decoding base64 in homepage: $decodeError');
        }
      }
    } catch (e) {
      print('DEBUG: Error loading saved avatar in homepage: $e');
    }
  }

  void _loadUserName() {
    final user = FirebaseAuth.instance.currentUser;
    
    if (user != null) {
      if (user.displayName != null && user.displayName!.isNotEmpty) {
        setState(() {
          userName = user.displayName!;
        });
        print('DEBUG: Loaded username from Firebase Auth: $userName');
      } else {
        print('DEBUG: No displayName in Auth, will fetch from Realtime Database asynchronously');

        Future.microtask(() async {
          try {
            final userRef = FirebaseDatabase.instance.ref('users/${user.uid}/username');
            final snapshot = await userRef
                .get()
                .timeout(const Duration(seconds: 5), onTimeout: () {
              print('DEBUG: Realtime Database fetch timed out');
              throw TimeoutException('Realtime Database timeout', const Duration(seconds: 5));
            });

            if (snapshot.exists && snapshot.value != null) {
              if (mounted) {
                setState(() {
                  userName = snapshot.value.toString();
                });
                print('DEBUG: Loaded username from Realtime Database: $userName');
              }
            } else {
              print('DEBUG: No username in Realtime Database, using default "User"');
            }
          } catch (error) {
            print('DEBUG: Error fetching from Realtime Database: $error');
          }
        });
      }
    } else {
      print('DEBUG: No user logged in, using default "User"');
    }
  }
  
  void _loadUnreadCount() {
    final currentUser = FirebaseAuth.instance.currentUser;
    if (currentUser == null) return;
    
    // Listen to chats for unread count
    FirebaseDatabase.instance.ref('chats').onValue.listen((event) {
      final data = event.snapshot.value;
      int count = 0;
      
      if (data != null && data is Map) {
        data.forEach((chatId, chatData) {
          if (chatData is Map && chatData['participants'] != null) {
            final participants = chatData['participants'] as Map;
            // Only count chats where current user is a participant
            if (participants[currentUser.uid] == true) {
              // Check if current user has unread messages
              final readStatus = chatData['readBy'] as Map?;
              final isUnread = readStatus == null || readStatus[currentUser.uid] != true;
              if (isUnread) {
                count++;
              }
            }
          }
        });
      }
      
      if (mounted) {
        setState(() {
          _unreadCount = count;
        });
      }
    });
  }

  @override
  Widget build(BuildContext context) {
    final size = MediaQuery.of(context).size;
    final width = size.width;
    
    // Responsive breakpoints
    final isSmallMobile = width < 360;
    final isMobile = width < 600;
    final isTablet = width >= 600 && width < 900;
    
    // Responsive sizing
    final horizontalPadding = isSmallMobile ? 16.0 : (isMobile ? 20.0 : (isTablet ? 32.0 : 40.0));
    final welcomeFontSize = isSmallMobile ? 16.0 : (isMobile ? 18.0 : 20.0);
    final nameFontSize = isSmallMobile ? 20.0 : (isMobile ? 24.0 : (isTablet ? 28.0 : 32.0));
    final avatarRadius = isSmallMobile ? 24.0 : (isMobile ? 28.0 : 32.0);
    final avatarIconSize = isSmallMobile ? 28.0 : (isMobile ? 32.0 : 36.0);
    final maxBannerHeight = isSmallMobile ? 150.0 : (isMobile ? 200.0 : (isTablet ? 250.0 : 300.0));
    final sectionFontSize = isSmallMobile ? 24.0 : (isMobile ? 28.0 : (isTablet ? 32.0 : 36.0));
    final viewAllFontSize = isSmallMobile ? 13.0 : (isMobile ? 14.0 : 16.0);
    final searchHeight = isSmallMobile ? 44.0 : (isMobile ? 48.0 : 52.0);
    final searchIconSize = isSmallMobile ? 20.0 : (isMobile ? 24.0 : 28.0);
    final categoryHeight = isSmallMobile ? 40.0 : (isMobile ? 45.0 : 50.0);
    final categoryFontSize = isSmallMobile ? 13.0 : (isMobile ? 14.0 : 15.0);
    final categoryPaddingH = isSmallMobile ? 20.0 : (isMobile ? 24.0 : 28.0);
    final spacing = isSmallMobile ? 16.0 : (isMobile ? 20.0 : 24.0);
    final buttonHeight = isSmallMobile ? 52.0 : (isMobile ? 56.0 : 60.0);
    final buttonFontSize = isSmallMobile ? 16.0 : (isMobile ? 18.0 : 20.0);
    final navIconSize = isSmallMobile ? 28.0 : (isMobile ? 32.0 : 36.0);
    
    return Scaffold(
      backgroundColor: Colors.white,
      body: SafeArea(
        child: Stack(
          children: [
            CustomScrollView(
              controller: _scrollController,
              slivers: [
            // Collapsible Header Section
            SliverToBoxAdapter(
              child: AnimatedContainer(
                duration: const Duration(milliseconds: 200),
                child: Column(
                  children: [
                    // Welcome Header
                    AnimatedOpacity(
                      opacity: _headerOpacity.clamp(0.0, 1.0),
                      duration: const Duration(milliseconds: 200),
                      child: AnimatedContainer(
                        duration: const Duration(milliseconds: 200),
                        height: _headerOpacity > 0.3 ? null : 0,
                        child: Padding(
                          padding: EdgeInsets.all(horizontalPadding),
                          child: Row(
                            mainAxisAlignment: MainAxisAlignment.spaceBetween,
                            children: [
                              Column(
                                crossAxisAlignment: CrossAxisAlignment.start,
                                children: [
                                  Text(
                                    'Welcome,',
                                    style: TextStyle(
                                      fontFamily: 'Poppins',
                                      fontSize: welcomeFontSize,
                                      color: Colors.grey,
                                      fontWeight: FontWeight.w400,
                                    ),
                                  ),
                                  SizedBox(height: isSmallMobile ? 2 : 4),
                                  Text(
                                    userName,
                                    style: TextStyle(
                                      fontFamily: 'Poppins',
                                      fontSize: nameFontSize,
                                      color: const Color(0xFF003060),
                                      fontWeight: FontWeight.bold,
                                    ),
                                  ),
                                ],
                              ),
                              GestureDetector(
                                onTap: () {
                                  print('DEBUG: Avatar tapped, navigating to profile');
                                  Navigator.push(
                                    context,
                                    MaterialPageRoute(
                                      builder: (context) => const ProfileScreen(),
                                    ),
                                  ).then((_) {
                                    // Reload avatar when coming back from profile
                                    _loadSavedAvatar();
                                    // Reset to home when coming back from profile
                                    setState(() {
                                      selectedNavIndex = 0;
                                      _iconAnimationControllers[0].forward();
                                    });
                                  });
                                },
                                child: CircleAvatar(
                                  radius: avatarRadius,
                                  backgroundColor: const Color(0xFF4A90E2),
                                  child: _avatarImage != null
                                      ? ClipOval(
                                          child: Image.file(
                                            _avatarImage!,
                                            fit: BoxFit.cover,
                                            width: avatarRadius * 2,
                                            height: avatarRadius * 2,
                                          ),
                                        )
                                      : Image.asset(
                                          'assets/avatar.png',
                                          errorBuilder: (context, error, stackTrace) {
                                            return Icon(
                                              Icons.person,
                                              color: Colors.white,
                                              size: avatarIconSize,
                                            );
                                          },
                                        ),
                                ),
                              ),
                            ],
                          ),
                        ),
                      ),
                    ),

                    // Homepage Post Image - Collapsible
                    AnimatedContainer(
                      duration: const Duration(milliseconds: 200),
                      height: _bannerHeight.clamp(0.0, maxBannerHeight),
                      child: _bannerHeight > 20
                          ? Padding(
                              padding: EdgeInsets.symmetric(horizontal: horizontalPadding),
                              child: ClipRRect(
                                borderRadius: BorderRadius.circular(16),
                                child: Image.asset(
                                  'assets/homepage post.png',
                                  width: double.infinity,
                                  fit: BoxFit.cover,
                                  errorBuilder: (context, error, stackTrace) {
                                    return Container(
                                      decoration: BoxDecoration(
                                        color: Colors.grey[300],
                                        borderRadius: BorderRadius.circular(16),
                                      ),
                                      child: Center(
                                        child: Icon(
                                          Icons.image_not_supported,
                                          size: isSmallMobile ? 40 : 50,
                                          color: Colors.grey[600],
                                        ),
                                      ),
                                    );
                                  },
                                ),
                              ),
                            )
                          : const SizedBox.shrink(),
                    ),

                    SizedBox(height: spacing),
                  ],
                ),
              ),
            ),

            // Section Header and Search
            SliverToBoxAdapter(
              child: Column(
                children: [
                  Padding(
                    padding: EdgeInsets.symmetric(horizontal: horizontalPadding),
                    child: Row(
                      children: [
                        Text(
                          'Section',
                          style: poppinsStyle(
                            fontSize: sectionFontSize,
                            color: const Color(0xFF003060),
                            fontWeight: FontWeight.bold,
                          ),
                        ),
                        const Spacer(),
                        TextButton(
                          onPressed: () {
                            Navigator.push(
                              context,
                              MaterialPageRoute(
                                builder: (context) => const BookPostedScreen(),
                              ),
                            );
                          },
                          child: Text(
                            'View All',
                            style: poppinsStyle(
                              fontSize: viewAllFontSize,
                              color: const Color(0xFFD67730),
                              fontWeight: FontWeight.w600,
                            ),
                          ),
                        ),
                      ],
                    ),
                  ),

                  SizedBox(height: spacing * 0.8),

                  // Search Bar
                  Padding(
                    padding: EdgeInsets.symmetric(horizontal: horizontalPadding),
                    child: Container(
                      height: searchHeight,
                      decoration: BoxDecoration(
                        color: const Color(0xFFD4DCE5),
                        borderRadius: BorderRadius.circular(24),
                      ),
                      child: TextField(
                        controller: searchController,
                        onChanged: (value) {
                          setState(() {
                            searchQuery = value;
                          });
                        },
                        decoration: InputDecoration(
                          hintText: 'Search',
                          hintStyle: poppinsStyle(
                            color: Colors.grey,
                            fontSize: viewAllFontSize,
                          ),
                          prefixIcon: Icon(
                            Icons.search,
                            color: Colors.grey[600],
                            size: searchIconSize,
                          ),
                          border: InputBorder.none,
                          contentPadding: EdgeInsets.symmetric(
                            horizontal: horizontalPadding,
                            vertical: 12,
                          ),
                        ),
                      ),
                    ),
                  ),

                  SizedBox(height: spacing),

                  // Category Filters
                  Padding(
                    padding: EdgeInsets.symmetric(horizontal: horizontalPadding),
                    child: SizedBox(
                      height: categoryHeight,
                      child: ListView.builder(
                        scrollDirection: Axis.horizontal,
                        itemCount: categories.length,
                        itemBuilder: (context, index) {
                          final category = categories[index];
                          final isSelected = selectedCategory == category;
                          return Padding(
                            padding: EdgeInsets.only(right: isMobile ? 12 : 16),
                            child: GestureDetector(
                              onTap: () {
                                setState(() {
                                  selectedCategory = category;
                                });
                              },
                              child: Container(
                                padding: EdgeInsets.symmetric(
                                  horizontal: categoryPaddingH,
                                  vertical: 10,
                                ),
                                decoration: BoxDecoration(
                                  color: isSelected
                                      ? const Color(0xFFD67730)
                                      : const Color(0xFF003060),
                                  borderRadius: BorderRadius.circular(22),
                                  border: Border.all(
                                    color: isSelected
                                        ? const Color(0xFFD67730)
                                        : const Color(0xFF003060),
                                    width: 2,
                                  ),
                                ),
                                child: Text(
                                  category,
                                  style: poppinsStyle(
                                    color: Colors.white,
                                    fontWeight: isSelected
                                        ? FontWeight.bold
                                        : FontWeight.w600,
                                    fontSize: categoryFontSize,
                                  ),
                                ),
                              ),
                            ),
                          );
                        },
                      ),
                    ),
                  ),

                  SizedBox(height: spacing),
                ],
              ),
            ),

            // Books Grid
            StreamBuilder<DatabaseEvent>(
              stream: FirebaseDatabase.instance
                  .ref('books')
                  .orderByChild('createdAt')
                  .onValue,
              builder: (context, snapshot) {
                if (snapshot.hasError) {
                  return SliverToBoxAdapter(
                    child: Center(
                      child: Padding(
                        padding: EdgeInsets.all(horizontalPadding),
                        child: Text(
                          'Error loading books',
                          style: poppinsStyle(
                            color: Colors.red,
                            fontSize: viewAllFontSize,
                          ),
                        ),
                      ),
                    ),
                  );
                }

                if (snapshot.connectionState == ConnectionState.waiting) {
                  return SliverToBoxAdapter(
                    child: Center(
                      child: Padding(
                        padding: EdgeInsets.all(horizontalPadding),
                        child: const CircularProgressIndicator(
                          color: Color(0xFFD67730),
                        ),
                      ),
                    ),
                  );
                }

                final event = snapshot.data;
                final dataSnapshot = event?.snapshot;
                final books = <Map<String, dynamic>>[];

                if (dataSnapshot != null && dataSnapshot.value != null) {
                  final value = dataSnapshot.value;
                  if (value is Map) {
                    value.forEach((key, dynamic rawBook) {
                      if (rawBook is Map) {
                        final bookMap = Map<String, dynamic>.from(rawBook);
                        bookMap['id'] = key.toString();
                        if (bookMap['penalties'] is Map) {
                          bookMap['penalties'] = Map<String, dynamic>.from(
                            bookMap['penalties'] as Map,
                          );
                        }
                        books.add(bookMap);
                      }
                    });
                  }
                }

                books.sort((a, b) {
                  final aCreated = (a['createdAt'] ?? 0);
                  final bCreated = (b['createdAt'] ?? 0);
                  final aValue = aCreated is num ? aCreated.toInt() : 0;
                  final bValue = bCreated is num ? bCreated.toInt() : 0;
                  return bValue.compareTo(aValue);
                });

                final filteredBooks = books.where((book) {
                  final title = (book['title'] ?? '').toString().toLowerCase();
                  final genre = (book['genre'] ?? '').toString();
                  
                  // Debug logging
                  print('DEBUG Filter - Book: ${book['title']}, Genre: "$genre", Selected: "$selectedCategory"');

                  if (searchQuery.isNotEmpty &&
                      !title.contains(searchQuery.toLowerCase())) {
                    return false;
                  }

                  if (selectedCategory != 'All' && genre != selectedCategory) {
                    print('DEBUG Filter - FILTERED OUT: "$genre" != "$selectedCategory"');
                    return false;
                  }

                  return true;
                }).toList();

                if (filteredBooks.isEmpty) {
                  return SliverToBoxAdapter(
                    child: Center(
                      child: Padding(
                        padding: EdgeInsets.all(horizontalPadding * 2),
                        child: Column(
                          mainAxisAlignment: MainAxisAlignment.center,
                          children: [
                            Icon(
                              Icons.book_outlined,
                              size: isSmallMobile ? 64 : (isMobile ? 72 : 80),
                              color: Colors.grey[400],
                            ),
                            SizedBox(height: spacing * 0.8),
                            Text(
                              'No books yet',
                              style: poppinsStyle(
                                fontSize: isSmallMobile ? 18 : (isMobile ? 19 : 20),
                                color: Colors.grey,
                                fontWeight: FontWeight.w500,
                              ),
                            ),
                            SizedBox(height: spacing * 0.4),
                            Text(
                              'Add books to start your reading list',
                              style: poppinsStyle(
                                fontSize: isSmallMobile ? 12 : (isMobile ? 13 : 14),
                                color: Colors.grey,
                              ),
                            ),
                          ],
                        ),
                      ),
                    ),
                  );
                }

                // Dynamic grid columns
                final gridColumns = isSmallMobile ? 2 : (isMobile ? 2 : (isTablet ? 3 : 4));
                final gridAspectRatio = isSmallMobile ? 0.60 : (isMobile ? 0.65 : (isTablet ? 0.70 : 0.75));

                return SliverPadding(
                  padding: EdgeInsets.symmetric(horizontal: horizontalPadding),
                  sliver: SliverGrid(
                    gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(
                      crossAxisCount: gridColumns,
                      crossAxisSpacing: isMobile ? 12 : (isTablet ? 16 : 20),
                      mainAxisSpacing: isMobile ? 14 : (isTablet ? 18 : 20),
                      childAspectRatio: gridAspectRatio,
                    ),
                    delegate: SliverChildBuilderDelegate(
                      (context, index) {
                        final book = filteredBooks[index];
                        final bookId = (book['id'] ?? '').toString();
                        return _buildBookCard(book, bookId, isSmallMobile, isMobile);
                      },
                      childCount: filteredBooks.length,
                    ),
                  ),
                );
              },
            ),

            // Add spacing at bottom for the fixed button
            const SliverToBoxAdapter(
              child: SizedBox(height: 80),
            ),
          ],
        ),

        // Fixed "Add Book" Button at the bottom - Floating
        Positioned(
          left: horizontalPadding,
          right: horizontalPadding,
          bottom: horizontalPadding,
          child: SizedBox(
            width: double.infinity,
            height: buttonHeight,
            child: ElevatedButton(
              onPressed: () {
                // Navigate to posting module
                Navigator.push(
                  context,
                  MaterialPageRoute(
                    builder: (context) => const BookPostingForm(),
                  ),
                );
              },
              style: ElevatedButton.styleFrom(
                backgroundColor: const Color(0xFFD67730),
                shape: RoundedRectangleBorder(
                  borderRadius: BorderRadius.circular(12),
                ),
                elevation: 4,
              ),
              child: Text(
                'Add a Book here',
                style: poppinsStyle(
                  fontSize: buttonFontSize,
                  fontWeight: FontWeight.bold,
                  color: Colors.white,
                ),
              ),
            ),
          ),
        ),
      ],
    ),
  ),
      bottomNavigationBar: Container(
        decoration: BoxDecoration(
          color: Colors.white,
          boxShadow: [
            BoxShadow(
              color: Colors.grey.withOpacity(0.2),
              blurRadius: 10,
              offset: const Offset(0, -2),
            ),
          ],
        ),
        child: BottomNavigationBar(
          currentIndex: selectedNavIndex,
          onTap: (index) {
            setState(() {
              _iconAnimationControllers[selectedNavIndex].reverse();
              selectedNavIndex = index;
              _iconAnimationControllers[index].forward();
            });
            
            // Navigate to favorites module when bookmarks icon is tapped
            if (index == 1) {
              Navigator.push(
                context,
                MaterialPageRoute(
                  builder: (context) => const FavoritesScreen(),
                ),
              ).then((_) {
                // Reset to home when coming back
                setState(() {
                  _iconAnimationControllers[selectedNavIndex].reverse();
                  selectedNavIndex = 0;
                  _iconAnimationControllers[0].forward();
                });
              });
            }
            // Navigate to chat module when messages icon is tapped
            else if (index == 2) {
              Navigator.push(
                context,
                MaterialPageRoute(
                  builder: (context) => const ChatsScreen(),
                ),
              ).then((_) {
                // Reset to home when coming back
                setState(() {
                  _iconAnimationControllers[selectedNavIndex].reverse();
                  selectedNavIndex = 0;
                  _iconAnimationControllers[0].forward();
                });
              });
            }
            // Navigate to profile module when profile icon is tapped
            else if (index == 3) {
              Navigator.push(
                context,
                MaterialPageRoute(
                  builder: (context) => const ProfileScreen(),
                ),
              ).then((_) {
                // Reset to home when coming back
                setState(() {
                  _iconAnimationControllers[selectedNavIndex].reverse();
                  selectedNavIndex = 0;
                  _iconAnimationControllers[0].forward();
                });
              });
            }
          },
          type: BottomNavigationBarType.fixed,
          backgroundColor: Colors.white,
          selectedItemColor: const Color(0xFFD67730),
          unselectedItemColor: const Color(0xFF003060),
          showSelectedLabels: false,
          showUnselectedLabels: false,
          elevation: 0,
          items: [
            BottomNavigationBarItem(
              icon: _buildAnimatedIcon(
                Icons.home_rounded,
                Icons.home_rounded,
                0,
                navIconSize,
              ),
              label: 'Home',
            ),
            BottomNavigationBarItem(
              icon: _buildAnimatedIcon(
                Icons.menu_book_rounded,
                Icons.menu_book_rounded,
                1,
                navIconSize,
              ),
              label: 'Bookmarks',
            ),
            BottomNavigationBarItem(
              icon: _buildAnimatedIconWithBadge(
                Icons.chat_bubble_rounded,
                Icons.chat_bubble_rounded,
                2,
                navIconSize,
                _unreadCount,
              ),
              label: 'Messages',
            ),
            BottomNavigationBarItem(
              icon: _buildAnimatedIcon(
                Icons.person_rounded,
                Icons.person_rounded,
                3,
                navIconSize,
              ),
              label: 'Profile',
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildBookCard(Map<String, dynamic> book, String bookId, bool isSmallMobile, bool isMobile) {
    final condition = book['condition'] ?? 'Used';
    final isNew = condition.toLowerCase().contains('new');
    final imageUrl = book['imageUrl'] as String?;
    
    // Responsive sizing
    final coverHeight = isSmallMobile ? 120.0 : (isMobile ? 130.0 : 140.0);
    final coverIconSize = isSmallMobile ? 48.0 : (isMobile ? 54.0 : 60.0);
    final cardPadding = isSmallMobile ? 10.0 : (isMobile ? 11.0 : 12.0);
    final titleFontSize = isSmallMobile ? 12.0 : (isMobile ? 13.0 : 14.0);
    final genreFontSize = isSmallMobile ? 10.0 : (isMobile ? 10.5 : 11.0);
    final badgeFontSize = isSmallMobile ? 9.0 : (isMobile ? 9.5 : 10.0);
    final badgePaddingH = isSmallMobile ? 6.0 : (isMobile ? 7.0 : 8.0);
    final badgePaddingV = isSmallMobile ? 3.0 : (isMobile ? 3.5 : 4.0);
    
    return GestureDetector(
      onTap: () {
        Navigator.push(
          context,
          MaterialPageRoute(
            builder: (context) => BookDetailScreen(
              book: book,
              bookId: bookId,
            ),
          ),
        );
      },
      child: Container(
        decoration: BoxDecoration(
          color: Colors.white,
          borderRadius: BorderRadius.circular(12),
          boxShadow: [
            BoxShadow(
              color: Colors.grey.withOpacity(0.2),
              blurRadius: 8,
              offset: const Offset(0, 2),
            ),
          ],
        ),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          // Book Cover (uploaded image or placeholder with genre color)
          Container(
            height: coverHeight,
            decoration: BoxDecoration(
              color: _getGenreColor(book['genre']),
              borderRadius: const BorderRadius.only(
                topLeft: Radius.circular(12),
                topRight: Radius.circular(12),
              ),
            ),
            child: Stack(
              fit: StackFit.expand,
              children: [
                imageUrl != null && imageUrl.isNotEmpty
                    ? ClipRRect(
                        borderRadius: const BorderRadius.only(
                          topLeft: Radius.circular(12),
                          topRight: Radius.circular(12),
                        ),
                        child: Image.memory(
                          base64Decode(imageUrl),
                          fit: BoxFit.cover,
                          width: double.infinity,
                          errorBuilder: (context, error, stackTrace) {
                            return Center(
                              child: Icon(
                                Icons.menu_book,
                                size: coverIconSize,
                                color: Colors.white.withOpacity(0.8),
                              ),
                            );
                          },
                        ),
                      )
                    : Center(
                        child: Icon(
                          Icons.menu_book,
                          size: coverIconSize,
                          color: Colors.white.withOpacity(0.8),
                        ),
                      ),
                // Status watermark overlay
                if (book['status'] == 'borrowed' || book['status'] == 'reserved')
                  Positioned.fill(
                    child: Container(
                      decoration: BoxDecoration(
                        color: Colors.black.withOpacity(0.5),
                        borderRadius: const BorderRadius.only(
                          topLeft: Radius.circular(12),
                          topRight: Radius.circular(12),
                        ),
                      ),
                      child: Center(
                        child: Transform.rotate(
                          angle: -0.3,
                          child: Text(
                            book['status'] == 'borrowed' ? 'BORROWED' : 'RESERVED',
                            style: GoogleFonts.poppins(
                              fontSize: isSmallMobile ? 16.0 : (isMobile ? 18.0 : 20.0),
                              fontWeight: FontWeight.w700,
                              color: Colors.white.withOpacity(0.9),
                              letterSpacing: 1.5,
                            ),
                          ),
                        ),
                      ),
                    ),
                  ),
              ],
            ),
          ),
          
          Expanded(
            child: Padding(
              padding: EdgeInsets.all(cardPadding),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  // Title
                  Text(
                    book['title'] ?? 'Untitled',
                    style: poppinsStyle(
                      fontSize: titleFontSize,
                      fontWeight: FontWeight.w600,
                      color: const Color(0xFF003060),
                    ),
                    maxLines: 2,
                    overflow: TextOverflow.ellipsis,
                  ),
                  
                  SizedBox(height: isMobile ? 3 : 4),
                  
                  // Genre
                  Text(
                    book['genre'] ?? '',
                    style: poppinsStyle(
                      fontSize: genreFontSize,
                      color: Colors.grey,
                    ),
                  ),
                  
                  const Spacer(),
                  
                  // Condition Badge
                  Container(
                    padding: EdgeInsets.symmetric(
                      horizontal: badgePaddingH,
                      vertical: badgePaddingV,
                    ),
                    decoration: BoxDecoration(
                      color: isNew 
                          ? const Color(0xFFD67730) 
                          : const Color(0xFF003060),
                      borderRadius: BorderRadius.circular(6),
                    ),
                    child: Text(
                      condition,
                      style: poppinsStyle(
                        fontSize: badgeFontSize,
                        color: Colors.white,
                        fontWeight: FontWeight.w600,
                      ),
                    ),
                  ),
                ],
              ),
            ),
          ),
        ],
      ),
    ),
    );
  }

  Color _getGenreColor(String? genre) {
    switch (genre?.toLowerCase()) {
      case 'education':
        return const Color(0xFF4A90E2);
      case 'fiction':
        return const Color(0xFF9B59B6);
      case 'non - fiction':
        return const Color(0xFF27AE60);
      case 'mystery':
        return const Color(0xFFE67E22);
      default:
        return const Color(0xFF95A5A6);
    }
  }

  @override
  void dispose() {
    searchController.dispose();
    _scrollController.dispose();
    for (var controller in _iconAnimationControllers) {
      controller.dispose();
    }
    super.dispose();
  }

  Widget _buildAnimatedIcon(IconData outlinedIcon, IconData filledIcon, int index, double iconSize) {
    return AnimatedBuilder(
      animation: _iconAnimationControllers[index],
      builder: (context, child) {
        final animation = _iconAnimationControllers[index];
        final isSelected = selectedNavIndex == index;
        
        // Elastic bounce curve for scale
        final scaleValue = isSelected 
            ? 1.0 + (Curves.elasticOut.transform(animation.value) * 0.25)
            : 1.0 - (animation.value * 0.1);
        
        // Subtle rotation for dynamic effect
        final rotationValue = isSelected
            ? (Curves.easeOutBack.transform(animation.value) * 0.1) - 0.05
            : 0.0;
        
        return Transform.rotate(
          angle: rotationValue,
          child: Transform.scale(
            scale: scaleValue,
            child: Icon(
              selectedNavIndex == index ? filledIcon : outlinedIcon,
              size: iconSize,
              color: selectedNavIndex == index
                  ? const Color(0xFFD67730)
                  : const Color(0xFF003060),
            ),
          ),
        );
      },
    );
  }
  
  Widget _buildAnimatedIconWithBadge(IconData outlinedIcon, IconData filledIcon, int index, double iconSize, int badgeCount) {
    final badgeSize = iconSize * 0.55;
    final badgeFontSize = iconSize * 0.35;
    
    return Stack(
      clipBehavior: Clip.none,
      children: [
        AnimatedBuilder(
          animation: _iconAnimationControllers[index],
          builder: (context, child) {
            final animation = _iconAnimationControllers[index];
            final isSelected = selectedNavIndex == index;
            
            // Elastic bounce curve for scale
            final scaleValue = isSelected 
                ? 1.0 + (Curves.elasticOut.transform(animation.value) * 0.25)
                : 1.0 - (animation.value * 0.1);
            
            // Subtle rotation for dynamic effect
            final rotationValue = isSelected
                ? (Curves.easeOutBack.transform(animation.value) * 0.1) - 0.05
                : 0.0;
            
            return Transform.rotate(
              angle: rotationValue,
              child: Transform.scale(
                scale: scaleValue,
                child: Icon(
                  selectedNavIndex == index ? filledIcon : outlinedIcon,
                  size: iconSize,
                  color: selectedNavIndex == index
                      ? const Color(0xFFD67730)
                      : const Color(0xFF003060),
                ),
              ),
            );
          },
        ),
        if (badgeCount > 0)
          Positioned(
            right: -6,
            top: -4,
            child: Container(
              padding: EdgeInsets.all(badgeCount > 9 ? 2 : 3),
              decoration: BoxDecoration(
                color: const Color(0xFFD67730),
                shape: BoxShape.circle,
                border: Border.all(
                  color: Colors.white,
                  width: 1.5,
                ),
              ),
              constraints: BoxConstraints(
                minWidth: badgeSize,
                minHeight: badgeSize,
              ),
              child: Center(
                child: Text(
                  badgeCount > 99 ? '99+' : badgeCount.toString(),
                  style: GoogleFonts.poppins(
                    color: Colors.white,
                    fontSize: badgeFontSize,
                    fontWeight: FontWeight.w600,
                    height: 1.0,
                  ),
                  textAlign: TextAlign.center,
                ),
              ),
            ),
          ),
      ],
    );
  }
}
